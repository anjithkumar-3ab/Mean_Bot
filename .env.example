# Database Configuration
MONGODB_URI=mongodb://localhost:27017/attendance_system
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/attendance_system

# Encryption Key for storing student passwords
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
ADMIN_TELEGRAM_BOT_TOKEN=your_admin_telegram_bot_token
ADMIN_TELEGRAM_CHAT_IDS=your_chat_id,another_admin_chat_id

# Scheduler Configuration
ATTENDANCE_CHECK_TIME=08:00
# Time in 24-hour format (HH:MM) when to send daily attendance

# MITS IMS Configuration
MITS_IMS_URL=http://mitsims.in
# Update with actual MITS IMS URL

# Optional Configuration
NODE_ENV=development
USE_MOCK_DATA=false
# Set to true for testing without actual scraping

# Browser Configuration
HEADLESS_MODE=true
# Set to false for local debugging (Chrome window will open)
# Set to true for production/cloud deployment (no window, runs in background)
